{% extends 'base.html.twig' %}

{% block body %}
    <div class="container margin">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-xs-12 col-sm-4 col-md-4">
                <div class="well well-sm">
                    <div class="row">
                        <div class="col-sm-6 col-md-4">
                            <img src="http://placehold.it/380x500" alt="" class="img-rounded img-responsive" />
                        </div>
                        <div class="col-sm-6 col-md-8">
                            <h4>
                                {{ app.user.prenom }} {{ app.user.nom }}</h4>

                            <p>
                                <i class="glyphicon glyphicon-envelope"></i> {{ app.user.email }}
                                <br />
                                <i class="glyphicon glyphicon-globe"></i><a href="http://www.{{ app.user.prenom }}{{ app.user.nom }}.com"> www.{{ app.user.prenom }}{{ app.user.nom }}.com</a>
                                <br />
                                <i class="glyphicon glyphicon-gift"></i> Soon</p>
                            <!-- Split button -->
                            <div class="btn-group">
                                <button type="button" class="btn btn-primary">
                                    Social</button>
                                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                    <span class="caret"></span><span class="sr-only">Social</span>
                                </button>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="#">Twitter</a></li>
                                    <li><a href="https://plus.google.com/+Jquery2dotnet/posts">Google +</a></li>
                                    <li><a href="https://www.facebook.com/jquery2dotnet">Facebook</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#">Github</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
{% endblock %}

{% block stylesheets %}

{% endblock %}

